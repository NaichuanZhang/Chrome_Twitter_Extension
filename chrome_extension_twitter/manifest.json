{
	// This file has important application and setup info that Chrome uses
	"manifest_version": 2,

	"name": "Rich Tweet Notifier",
	"description": "Allows you to get new Twitter nofitications immediately in the desktop", //
	"background": {
		"page": "background.html"
	},
	"version": "1.0",
	"permissions":[
		"notifications",
		"https://twitter.com/i/notifications"
	],
	"content_security_policy":  "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" }
}
